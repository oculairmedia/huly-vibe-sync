{
  "compilerOptions": {
    // Type checking
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    
    // Module system
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    
    // Strict type checking
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    // Additional checks (relaxed for gradual adoption)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    
    // Module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // Output
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Library
    "lib": ["ES2022"],
    
    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "*.js",
    "lib/**/*.js",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".test-data",
    "logs",
    ".letta"
  ]
}
