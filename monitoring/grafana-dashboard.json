{
  "dashboard": {
    "title": "Huly-Vibe Sync Dashboard",
    "tags": ["huly", "vibe", "sync"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Sync Success Rate",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "(sum(sync_runs_total{status=\"success\"}) / sum(sync_runs_total)) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Syncs",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(sync_runs_total)",
            "legendFormat": "Total Syncs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Average Sync Duration",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(sync_duration_seconds_sum[5m]) / rate(sync_duration_seconds_count[5m])",
            "legendFormat": "Avg Duration",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 4,
        "title": "Projects & Issues Synced",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "projects_processed",
            "legendFormat": "Projects",
            "refId": "A"
          },
          {
            "expr": "issues_synced",
            "legendFormat": "Issues",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Sync Duration Over Time",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(sync_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(sync_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(sync_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 6,
        "title": "Sync Success/Failure Rate",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(sync_runs_total{status=\"success\"}[5m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "rate(sync_runs_total{status=\"error\"}[5m])",
            "legendFormat": "Error",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Syncs/sec"
          }
        ]
      },
      {
        "id": 7,
        "title": "Huly API Latency by Operation",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(huly_api_latency_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(huly_api_latency_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 8,
        "title": "Vibe API Latency by Operation",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(vibe_api_latency_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(vibe_api_latency_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - p95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "memory_usage_bytes{type=\"rss\"}",
            "legendFormat": "RSS",
            "refId": "A"
          },
          {
            "expr": "memory_usage_bytes{type=\"heapUsed\"}",
            "legendFormat": "Heap Used",
            "refId": "B"
          },
          {
            "expr": "memory_usage_bytes{type=\"heapTotal\"}",
            "legendFormat": "Heap Total",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          }
        ]
      },
      {
        "id": 10,
        "title": "Connection Pool Status",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "connection_pool_active",
            "legendFormat": "{{protocol}} Active",
            "refId": "A"
          },
          {
            "expr": "connection_pool_free",
            "legendFormat": "{{protocol}} Free",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          }
        ]
      }
    ]
  }
}
