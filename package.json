{
  "name": "huly-vibe-sync",
  "version": "1.0.0",
  "description": "Bidirectional sync service between Huly and Vibe Kanban",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "DRY_RUN=true SYNC_INTERVAL=0 node index.js",
    "sync-once": "SYNC_INTERVAL=0 node index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "manage": "node manage-agents.js",
    "agents": "node manage-agents.js list-agents",
    "migrate": "node migrate-agents-to-v1.js",
    "control-agent": "node create-control-agent.js",
    "compare-agents": "node tests/compare-agent-sources.js",
    "migrate-agents-md": "node migrate-agents-md.js",
    "migrate-agents-db": "node migrate-agents-to-db.js"
  },
  "keywords": [
    "huly",
    "vibe-kanban",
    "sync",
    "mcp",
    "bidirectional-sync"
  ],
  "author": "Oculair Media",
  "license": "MIT",
  "dependencies": {
    "@letta-ai/letta-client": "^0.0.68665",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "node-fetch": "^3.3.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
