# Docker Compose Environment Variables Example
# Copy this file to .env and update with your values

# Backend Configuration
HULY_API_URL=http://192.168.50.90:3457/api
HULY_USE_REST=true

VIBE_API_URL=http://192.168.50.90:3105/api
VIBE_USE_REST=true

# Sync Settings
SYNC_INTERVAL=300000
DRY_RUN=false
INCREMENTAL_SYNC=true
PARALLEL_SYNC=false
MAX_WORKERS=5
SKIP_EMPTY_PROJECTS=false
API_DELAY=10

# Letta AI (Optional)
LETTA_BASE_URL=
LETTA_PASSWORD=

# Service Ports
HEALTH_PORT=3099
FRONTEND_PORT=3000

# Stacks Directory
STACKS_DIR=/opt/stacks

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3099
NEXT_PUBLIC_POLLING_INTERVAL=5000

# GitHub Repository (for image names)
GITHUB_REPOSITORY=your-org/huly-vibe-sync
